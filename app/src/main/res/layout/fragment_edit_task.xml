<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_task_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="24dp"
android:gravity="center"
android:background="#FFFFFF">

    <Button
        android:id="@+id/btn_edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Description"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="102dp" />

    <Button
        android:id="@+id/btn_edit_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Priority Level"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="156dp" />

    <Button
        android:id="@+id/btn_edit_pomodoros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Number of Pomodoro's"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="219dp" />

</androidx.constraintlayout.widget.ConstraintLayout>