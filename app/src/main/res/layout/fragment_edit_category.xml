<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

        <data>
                <variable
                    name="taskVM"
                    type="com.example.pomodoro_timer.viewmodels.TaskViewModel" />
        </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/edit_category_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center"
            android:background="#FFFFFF">

                <Button
                    android:id="@+id/btn_edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:text="Edit Title"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="70dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                    android:id="@+id/btn_edit_description"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:text="Edit Description"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="126dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_edit_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                    android:id="@+id/btn_edit_icon"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:text="Edit Category Icon (Optional)"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="186dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_edit_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
