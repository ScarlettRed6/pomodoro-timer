<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CalendarHeatmapView">
        <attr name="squareSize" format="dimension" />
        <attr name="squareSpacing" format="dimension" />
        <attr name="monthSpacing" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="emptyColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="weeksToShow" format="integer" />
    </declare-styleable>


    <!-- Theme attribute colors -->

    <!-- Text colors -->
    <attr name="baseTextColor" format="color"/>
    <attr name="timerTypeTextColor" format="color"/>
    <attr name="timerSelectionTextColor" format="color"/>

    <!-- Buttons colors -->
    <attr name="saveBtnColor" format="color"/>
    <attr name="cancelBtnColor" format="color"/>
    <attr name="prevMonthBtnColor" format="color"/>
    <attr name="nextMonthBtnColor" format="color"/>

    <!-- Switch Colors -->
    <attr name="bgColorOnSwitchOn" format="color"/>
    <attr name="bgColorOnSwitchOff" format="color"/>
    <attr name="thumbColorOnSwitchOn" format="color"/>
    <attr name="thumbColorOnSwitchOff" format="color"/>
    <attr name="strokeColorOnSwitchOn" format="color"/>
    <attr name="strokeColorOnSwitchOff" format="color"/>

    <!-- Custom Background colors -->
    <attr name="backgroundDimCurvedColor1" format="color"/> <!-- from background_dim_curved_pink -->
    <attr name="backgroundDimCurvedColor2" format="color"/> <!-- from background_dim_curved_purple -->
    <attr name="backgroundDimCurvedColor3" format="color"/> <!-- from background_dim_curved_purple2 -->
    <attr name="backgroundDimCurvedColor4" format="color"/> <!-- from background_dim_curved_white -->

    <attr name="backgroundGradientCardColor1.1" format="color"/> <!-- from background_gradient_card -->
    <attr name="backgroundGradientCardColor1.2" format="color"/> <!-- from background_gradient_card -->
    <attr name="backgroundGradientCardColor2.1" format="color"/> <!-- from background_gradient_card_purple -->
    <attr name="backgroundGradientCardColor2.2" format="color"/> <!-- from background_gradient_card_purple -->
    <attr name="backgroundGradientCardColor3.1" format="color"/> <!-- from background_gradient_card_purple2 -->
    <attr name="backgroundGradientCardColor3.2" format="color"/> <!-- from background_gradient_card_purple2 -->

    <attr name="bottomNavBgCurved1.1" format="color"/> <!-- from bottom_nav_bg_curved -->
    <attr name="bottomNavBgCurved1.2" format="color"/> <!-- from bottom_nav_bg_curved -->

    <attr name="roundedBtnBg" format="color"/> <!-- from rounded_btn_bg -->
    <attr name="roundedBtnBg2" format="color"/> <!-- from rounded_btn_bg2 -->
    <attr name="roundedBtnBg2.2" format="color"/> <!-- from rounded_btn_bg2-->
    <attr name="roundedBtnBg2.3" format="color"/> <!-- from rounded_btn_bg2 -->

    <!-- Timer Donut progress color -->
    <attr name="timerDonutProgressColor" format="color"/>
    <attr name="timerDonutProgressColor2" format="color"/>
    <attr name="timerDonutProgressColor3" format="color"/>

    <!-- Image Icons -->
    <!-- Timer pause and start and stop icon-->
    <attr name="startImageIcon" format="reference"/>
    <attr name="pauseImageIcon" format="reference"/>
    <attr name="stopImageIcon" format="reference"/>

    <!-- Category icons -->
    <attr name="categoryLaptopIcon" format="reference"/>
    <attr name="categoryBookIcon" format="reference"/>
    <!-- Category icon selector -->
    <attr name="iconSelectedColor1" format="reference"/>
    <attr name="iconSelectedColor2" format="reference"/>
    <attr name="iconNotSelectedColor" format="reference"/>

    <!-- Add task/category icon -->
    <attr name="addIcon" format="reference"/>
    <attr name="addCategoryPickerIcon" format="reference"/>

    <!-- Background app images -->
    <attr name="backgroundTaskScreen" format="reference" />
    <attr name="backgroundTimerScreen" format="reference" />
    <attr name="backgroundStatsScreen" format="reference" />
    <attr name="backgroundSettingsScreen" format="reference" />
    <attr name="backgroundDefaultScreen" format="reference" />

    <!-- Attributes for CalendarHeatMapView -->
    <attr name="calendarEmptyColor" format="color|reference" />
    <attr name="calendarTextColor" format="color|reference" /> <!-- You might already have a baseTextColor -->
    <attr name="calendarHeaderBackgroundColor" format="color|reference" />
    <attr name="calendarTodayIndicatorColor" format="color|reference" />

    <!-- Attributes for the heatmap colors (assuming 4 levels for now) -->
    <attr name="calendarHeatmapColorLowest" format="color|reference" />
    <attr name="calendarHeatmapColorLow" format="color|reference" />
    <attr name="calendarHeatmapColorMedium" format="color|reference" />
    <attr name="calendarHeatmapColorHigh" format="color|reference" />

    <!-- Misc icons -->
    <attr name="deleteIcon" format="reference"/>
    <attr name="defaultUserPic" format="reference"/>


</resources>